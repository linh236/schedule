<%= turbo_stream.update "approve-detail" do %>
  <h5 class="mb-2 text-2xl text-center font-bold tracking-tight text-gray-900 dark:text-white"><%= @approve.event.name %></h5>
  <%= @approve.event.note %>
<% end %>

<%= turbo_stream.update "approve-user" do %>
    <button data-id="<%= @approve.id %>" data-position="<%= @approve.position %>" type="button" data-action="click->approves#approved" class="text-white bg-blue-500 hover:bg-blue-500 focus:ring-4 focus:outline-none focus:ring-blue-500 rounded-lg border border-blue-500 text-sm font-medium px-5 py-2.5 hover:text-white focus:z-10 dark:bg-blue-700 dark:text-gray-300 dark:border-gray-500 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-600">Approved</button>
<% end %>


