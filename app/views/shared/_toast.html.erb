  <div class="flex">
      <div class="ml-3 text-sm font-normal">
          <span class="mb-1 text-sm font-semibold"><%= title %></span>
          <div class="mb-2 text-sm font-normal"><%= message.html_safe %></div> 
      </div>
      <button type="button" class="ml-auto -mx-1.5 -my-1.5 rounded-lg <%= message_class_for(type)%>" data-dismiss-target="#toast-message-cta" aria-label="Close">
